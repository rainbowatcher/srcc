{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Source Compare",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#paths"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.double-slash.source-compare",
				"match": "//.*$"
			}, {
				"name": "comment.block.source-compare",
				"begin": "/\\*",
				"end": "\\*/"
			}]
		},
		"paths": {
			"name": "string.unquoted.path.source-compare",
			"match": "^/?[^\\s]+"
		},
		"strings": {
			"name": "string.quoted.double.source-compare",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.source-compare",
					"match": "\\\\."
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.source-compare",
				"match": "\\b(if|while|for|return|function|class|import|export)\\b"
			}]
		}
	},
	"scopeName": "source.compare"
}
