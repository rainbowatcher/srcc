{
  "name": "srcc",
  "displayName": "srcc",
  "description": "quick compare two source file",
  "version": "0.0.1",
  "type": "module",
  "icon": "icons/icon128.png",
  "engines": {
    "vscode": "^1.106.1"
  },
  "repository": "github:rainbowatcher/srcc",
  "main": "./dist/extension.cjs",
  "activationEvents": ["workspaceContains:**/*.srcc"],
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "srcc.diffView", 
        "displayName": "SRCC Diff Launcher",
        "selector": [
          {
            "filenamePattern": "*.srcc"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "srcc.toggleAutoOpen",
        "title": "Toggle Auto Open",
        "category": "SRCC"
      }
    ],
    "languages": [
      {
        "id": "source-compare",
        "aliases": [
          "Source Compare",
          "source-compare"
        ],
        "extensions": [
          ".srcc"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/srcc-icon.svg",
          "dark": "./icons/srcc-icon.svg"
        }
      }
    ],
    "configuration": {
      "title": "SRCC Extension",
      "properties": {
        "srcc.autoOpenDiff": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open diff view when opening .srcc files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsdown",
    "pack": "vsce pack",
    "publish": "vsce publish",
    "watch": "tsdown --watch",
    "changelog": "git-cliff -o CHANGELOG.md",
    "release": "bumpp",
    "format": "prettier -w '**/*.{ts,json,md,toml}'"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.106.1",
    "@vscode/vsce": "^3.7.1",
    "bumpp": "^10.3.1",
    "git-cliff": "^2.10.1",
    "prettier": "^3.6.2",
    "sharp": "^0.34.5",
    "tinyexec": "^1.0.2",
    "tsdown": "^0.16.6",
    "typescript": "^5.9.3"
  }
}
