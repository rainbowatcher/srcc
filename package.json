{
  "name": "srcc",
  "displayName": "srcc",
  "description": "quick compare two source file",
  "version": "0.0.1",
  "icon": "icons/icon128.png",
  "engines": {
    "vscode": "^1.106.1"
  },
  "main": "./out/extension.js",
  "activationEvents": [],
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
      "id": "source-compare",
        "aliases": [
          "Source Compare",
          "source-compare"
        ],
        "extensions": [
          ".srcc"
        ],
      "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
      "language": "source-compare",
      "scopeName": "source.compare",
      "path": "./syntaxes/source-compare.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "SRCC Extension",
      "properties": {
        "srcc.autoOpenDiff": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open diff view when opening .srcc files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.106.1",
    "typescript": "^4.7.4"
  }
}
